@{
    ViewBag.Title = "Hydration Tracker";
    List<UserAccount> creds = ((IEnumerable<UserAccount>)ViewData["accDetails"]).ToList();
    List<HydrationLog> logs = ((IEnumerable<HydrationLog>)ViewData["hydrationLogs"]).Reverse().ToList();
}

<!-- Header -->
<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">@ViewBag.Title</h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home", new { id = creds[0].UserID })"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home", new { id = creds[0].UserID })">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-lg-6 col-5 text-right">
                    <a href="#" class="btn btn-sm btn-neutral">New</a>
                    <a href="#" class="btn btn-sm btn-neutral">Filters</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Page content -->
<div class="container-fluid mt--6">
    <div class="row">
        <div class="col">
            <div class="card">
                <!-- Card header -->
                <div class="card-header border-0">
                    <h3 class="mb-0">@DateTime.Now.ToString("dddd, dd MMMM yyyy")</h3>
                </div>
                <!-- Light table -->
                <div class="table-responsive">
                    <form class="mr-3" action="../AddHydrationLog?id=@creds[0].UserID" method="post">
                        <div class="pl-lg-4">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="form-control-label" for="description">Short Description</label>
                                        <input type="text" class="form-control" placeholder="Short Description" name="description" required>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="form-control-label" for="glasses">Glasses of Water</label>
                                        <input type="range" class="form-control-range" min="0" max="8" name="glasses" oninput="this.nextElementSibling.value = this.value">
                                        <output class="text-center w-100 mt-2">4</output>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="pl-lg-4">
                            <div class="text-center">
                                <input class="btn btn-primary mt-2 mb-4" type="submit" value="Submit">
                            </div>
                        </div>
                    </form>
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col" class="sort" data-sort="name">Date</th>
                                <th scope="col" class="sort" data-sort="budget">Glasses</th>
                                <th scope="col" class="sort" data-sort="completion">Description</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody class="list">
                            @foreach (var log in logs)
                            {
                            <tr>
                                <th scope="row">
                                    <div class="media align-items-center">
                                        <div class="media-body">
                                            <span class="name mb-0 text-sm">@DateTime.Parse(log.Date.ToString()).ToString("MMM d, yyyy")</span>
                                        </div>
                                    </div>
                                </th>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <span class="mr-2">@log.Glasses</span>
                                        <div>
                                            <div class="progress">
                                                @if (log.Glasses <= 1)
                                                {
                                                <div class="progress-bar bg-gradient-darker" role="progressbar" aria-valuenow="10" aria-valuemin="0" aria-valuemax="80" style="width: 0%;"></div>
                                                }
                                                else if (log.Glasses <= 2)
                                                {
                                                <div class="progress-bar bg-gradient-red" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="80" style="width: 10%;"></div>
                                                }
                                                else if (log.Glasses <= 3)
                                                {
                                                <div class="progress-bar bg-gradient-red" role="progressbar" aria-valuenow="30" aria-valuemin="0" aria-valuemax="80" style="width: 25%;"></div>
                                                }
                                                else if (log.Glasses <= 4)
                                                {
                                                <div class="progress-bar bg-gradient-orange" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="80" style="width: 40%;"></div>
                                                }
                                                else if (log.Glasses <= 5)
                                                {
                                                <div class="progress-bar bg-gradient-orange" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="80" style="width: 55%;"></div>
                                                }
                                                else if (log.Glasses <= 6)
                                                {
                                                <div class="progress-bar bg-gradient-info" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="80" style="width: 70%;"></div>
                                                }
                                                else if (log.Glasses <= 7)
                                                {
                                                <div class="progress-bar bg-gradient-green" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="80" style="width: 85%;"></div>
                                                }
                                                else if (log.Glasses <= 8)
                                                {
                                                <div class="progress-bar bg-gradient-green" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="80" style="width: 100%;"></div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        @log.Description
                                    </div>
                                </td>
                                <td class="text-right">
                                    <div class="dropdown">
                                        <a class="btn btn-sm btn-icon-only text-light" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="fas fa-ellipsis-v"></i>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                                            <a class="dropdown-item" href="../UpdateHydrationLog/@creds[0].UserID?log=@log.HydrationLogID">Edit</a>
                                            <a class="dropdown-item" href="../DeleteHydrationLog?id=@log.HydrationLogID">Delete</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- Card footer -->
                <div class="card-footer py-4">
                    <nav aria-label="...">
                        <ul class="pagination justify-content-end mb-0">
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1">
                                    <i class="fas fa-angle-left"></i>
                                    <span class="sr-only">Previous</span>
                                </a>
                            </li>
                            <li class="page-item active">
                                <a class="page-link" href="#">1</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">
                                    <i class="fas fa-angle-right"></i>
                                    <span class="sr-only">Next</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>